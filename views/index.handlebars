<div class="row mt-3">

    {{!-- caroosel --}}
    <div class="mainContent">
        <div class="col-md-12">
            <div class="bd-example">
                <div id="carouselExampleCaptions" class="carousel slide mt-3" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/assets/images/street.png" class="d-block w-100 caroosel" alt="Street Fighter">
                            <div class="carousel-caption d-none d-md-block">
                                <h5></h5>
                                <p class="caroosel-text">Browse Our Street Fighter V Brackets!</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/assets/images/league_death.png" class="d-block w-100 caroosel"
                                alt="League of Legends">
                            <div class="carousel-caption d-none d-md-block">
                                <h5></h5>
                                <p class="caroosel-text">Browse Our League of Legend Brackets!</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/assets/images/smash.png" class="d-block w-100 caroosel"
                                alt="Super Smash Ultimate">
                            <div class="carousel-caption d-none d-md-block">
                                <h5></h5>
                                <p class="caroosel-text">Browse Our Smash Bros Ultimate Brackets!</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- cards --}}
<div class="row justify-content-center">
    <div class="col-md-8 displayBrackets">
        <div class="container createB">
            <h4 class="text-center">Browse Brackets</h4>
            <h4 class="text-center">Take a look at some of our ongoing/planned tournaments</h4>
            <hr>
            {{#each brackets}}
            <div class="card dynamicCard">
                <div class="card-body">
                    <h3 class="card-text">{{this.dataValues.bracketName}}</h3>
                    <p class="card-text">This bracket is a {{this.dataValues.bracketType}}</p>
                    <a href="/api/bracket/{{this.dataValues.id}}" class="btn btn-primary">Link to bracket</a>
                </div>
            </div>
            {{/each}}
            <div class="card dynamicCard">
                <div class="card-body">
                    <h3 class="card-text">##SUPER SMASH TOURNAMENT## $$$ BYOC</h3>
                    <p class="card-text">This bracket is a Single Elimination</p>
                    <a href="/api/bracket/2" class="btn btn-primary">Link to bracket</a>
                </div>
            </div>
            <div class="card dynamicCard">
                <div class="card-body">
                    <h3 class="card-text">Street Fighter V DE *Prize Money*</h3>
                    <p class="card-text">This bracket is a Double Elimination</p>
                    <a href="/api/bracket/3" class="btn btn-primary">Link to bracket</a>
                </div>
            </div>
        </div>
    </div>
</div>